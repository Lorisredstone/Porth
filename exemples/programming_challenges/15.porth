#include modules/std.porth

macro 3n+1_step
    dup "valeur" set
    dup even dup if
        2 "valeur" var_div
    end
    not if
        3 "valeur" var_mul
        1 "valeur" var_add
    end
    "valeur" get
end

macro 3n+1_process
    dup
    true while
        3n+1_step show swap drop space
        false over 1 = not if drop true end
    end
    newline
    drop
end

100 1 for while

    show "\N : \N" print 3n+1_process

    endfor
end
